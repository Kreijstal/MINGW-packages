
# Maintainer:
# Contributor:

_realname=pyaes
pkgbase=mingw-w64-python-${_realname}
pkgname=("${MINGW_PACKAGE_PREFIX}-python-${_realname}")
pkgver=1.6.1
pkgrel=1
pkgdesc='A pure-Python implementation of the AES block cipher algorithm and the common modes of operation (mingw-w64)'
arch=('any')
url='https://github.com/ricmoo/pyaes'
license=('MIT')
depends=("${MINGW_PACKAGE_PREFIX}-python")
makedepends=(
  git
  "${MINGW_PACKAGE_PREFIX}-python-setuptools"
  "${MINGW_PACKAGE_PREFIX}-python-wheel"
  "${MINGW_PACKAGE_PREFIX}-python-installer"
  "${MINGW_PACKAGE_PREFIX}-python-build"
)
options=('!strip')
checkdepends=(
  "${MINGW_PACKAGE_PREFIX}-python-pycryptodome" 
)
source=("https://github.com/ricmoo/pyaes/archive/v${pkgver}.tar.gz")
sha256sums=('SKIP') # Replace with the actual SHA256 sum

build() {
  cd "${srcdir}/pyaes-${pkgver}"
  ${MINGW_PREFIX}/bin/python -m build --wheel --no-isolation
}

check() {
  cd "${srcdir}/pyaes-${pkgver}/tests"
  ${MINGW_PREFIX}/bin/python test-aes.py
  ${MINGW_PREFIX}/bin/python test-blockfeeder.py
  ${MINGW_PREFIX}/bin/python test-util.py
}

package() {
  cd "${srcdir}/pyaes-${pkgver}"
  ${MINGW_PREFIX}/bin/python -m installer --destdir="${pkgdir}" dist/*.whl
  install -Dm644 LICENSE.txt "${pkgdir}${MINGW_PREFIX}/share/licenses/${pkgname}/LICENSE"
}
